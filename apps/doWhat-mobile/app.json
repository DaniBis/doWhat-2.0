{
  "expo": {
    "name": "doWhat",
    "slug": "doWhat-mobile",
    "scheme": "dowhat",
    "extra": {
      "EXPO_PUBLIC_SUPABASE_URL": "https://YOUR-PROJECT.supabase.co",
      "EXPO_PUBLIC_SUPABASE_ANON_KEY": "YOUR-ANON-KEY"
    },
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.dowhat.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to find nearby activities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow doWhat to access your location in the background to keep nearby activities up to date.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.dowhat.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "${EXPO_PUBLIC_GOOGLE_MAPS_API_KEY}"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      ["expo-maps", { "requestLocationPermission": true }]
    ]
  }
}
