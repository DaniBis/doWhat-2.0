{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "jsx": "react-jsx",
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "customConditions": ["react-native"],
  "types": ["react", "react-native", "expo", "jest"],
    "target": "ES2020",
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@dowhat/shared": ["../../packages/shared/src/index.ts"],
      "./lib/*": ["src/lib/*"],
      "./lib": ["src/lib"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "app_backup/**",
    "src/__tests__/**",
  "src/setupTests.ts",
    "android/**",
    "ios/**"
  ]
}
