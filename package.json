{
  "name": "dowhat-monorepo",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "install:all": "pnpm install",
    "build": "pnpm -r --filter ./packages/shared build && pnpm -r --filter \"./apps/*\" build",
    "dev:web": "pnpm --filter dowhat-web dev",
    "dev:mobile": "pnpm --filter doWhat-mobile start",
    "clean": "pnpm -r --filter \"./**\" run clean || true",
    "clean:mobile:deep": "rm -rf apps/doWhat-mobile/.expo apps/doWhat-mobile/node_modules/.cache && find . -name '*.tsbuildinfo' -delete",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "typecheck": "pnpm -r run typecheck || true",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "psql \"$SUPABASE_DB_URL\" -f apps/doWhat-web/src/lib/supabase/migrations/007_badges.sql && psql \"$SUPABASE_DB_URL\" -f apps/doWhat-web/src/lib/supabase/migrations/008_traits.sql && psql \"$SUPABASE_DB_URL\" -f apps/doWhat-web/src/lib/supabase/migrations/009_policies.sql && psql \"$SUPABASE_DB_URL\" -f apps/doWhat-web/src/lib/supabase/migrations/010_reliability.sql && psql \"$SUPABASE_DB_URL\" -f apps/doWhat-web/src/lib/supabase/migrations/011_schema_consolidation.sql",
    "health": "curl -sf http://localhost:3002/api/health | jq .ok || true",
    "ci": "pnpm install --frozen-lockfile && pnpm -w run typecheck && pnpm -w run lint && pnpm -w run test && pnpm --filter dowhat-web run build && (pnpm --filter dowhat-web run start &) && node -e \"const http=require('node:http');const url='http://localhost:3002/api/health';let i=0;const max=30;const wait=2000;function poll(){i++;http.get(url,r=>{let d='';r.on('data',c=>d+=c);r.on('end',()=>{try{const j=JSON.parse(d);if(j.ok){console.log('Health OK');process.exit(0)}else{console.error('Health not OK yet');if(i<max)setTimeout(poll,wait);else process.exit(1)}}catch(e){if(i<max)setTimeout(poll,wait);else{console.error('Health parse error',e);process.exit(1)}}})}).on('error',e=>{if(i<max)setTimeout(poll,wait);else{console.error('Health request error',e);process.exit(1)}})}poll();\"",
    "cron:traits:batch": "curl -s -X POST -H x-cron-secret:$CRON_SECRET 'http://localhost:3002/api/traits/recompute/all?limit=50&offset=0'",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^30.1.2",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.0",
    "eslint-config-next": "14",
    "eslint-plugin-import": "2",
    "eslint-plugin-react": "7",
    "eslint-plugin-react-hooks": "4",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "patch-package": "^8.0.0",
    "rimraf": "6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "expo-device@5.9.4": "patches/expo-device@5.9.4.patch",
      "expo-dev-menu@4.5.8": "patches/expo-dev-menu@4.5.8.patch"
    }
  },
  "version": "1.0.0",
  "dependencies": {
    "expo": "~50.0.17",
    "react": "18.2.0",
    "react-native": "0.73.6"
  }
}
